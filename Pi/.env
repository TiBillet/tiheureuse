# --- RFID ---
RFID_DEVICE=/dev/ttyS0
RFID_TIMEOUT=1.0

# --- Vanne ---
VALVE_GPIO_PIN=18
VALVE_ACTIVE_HIGH=False

# --- Débitmètre ---
FLOW_GPIO_PIN=23
FLOW_CALIBRATION_FACTOR=6.5

# --- Backend ---
BACKEND_HOST=backend# ou 192.168.1.100 pour une IP fixe
BACKEND_PORT=8000
NETWORK_TIMEOUT=5.0
MAX_RETRIES=3

# --- Logs ---
LOG_LEVEL=INFO

# --- Systemd ---
SYSTEMD_NOTIFY=True
